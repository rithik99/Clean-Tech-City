<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review"
    android:background="@color/spl"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="65dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:contentPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:text="CleanCity"
            android:textAlignment="center"
            android:textColor="@color/spl"
            android:textSize="30dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="70dp"
            android:text="Review"
            android:textAlignment="center"
            android:textColor="@color/spl"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/ed1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="25dp"
            android:hint="Enter Your Mail"
            android:background="@drawable/rounded_edittext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint On"
            android:layout_marginTop="210dp"
            android:textColor="#20B2AA"
            android:textSize="20dp"
            />

        <GridLayout
            android:layout_width="300dp"
            android:layout_height="275dp"
            android:rowCount="5"
            android:columnCount="2"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/r1"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:text="Garbage Not Collected"
                android:textSize="20dp"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/a1"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_arrow_right"
                android:textSize="25dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/r2"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:text="DustBin not Found"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/a2"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_arrow_right"
                android:textSize="25dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/r3"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:text="Stray Animals Near Bins"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="0"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_arrow_right"
                android:textSize="25dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/r4"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:text="Wrong Type of Bin"
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="0"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_arrow_right"
                android:textSize="25sp"
                android:clickable="true"
                android:focusable="true" />
            <EditText
                android:id="@+id/r5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#000000"
                android:paddingLeft="25dp"
                android:hint="Others"
                />

            <TextView
                android:id="@+id/a5"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_arrow_right"
                android:textSize="25dp"
                android:clickable="true"
                />


        </GridLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>